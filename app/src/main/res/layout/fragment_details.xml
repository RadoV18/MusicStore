<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flexDirection="column"
    app:justifyContent="flex_start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Detalles del Instrumento"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_alignSelf="center" />

    <ImageView
        android:id="@+id/ivImageDetails"
        android:layout_width="match_parent"
        android:layout_height="300dp" />


    <TextView
        android:id="@+id/tvNameDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Modelo"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_alignSelf="center" />

    <TextView
        android:id="@+id/tvDescriptionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et doloe magna aliqua."
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvPriceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:text="Precio: $2000"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnHomeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Volver al inicio"
        app:layout_alignSelf="center" />

</com.google.android.flexbox.FlexboxLayout>